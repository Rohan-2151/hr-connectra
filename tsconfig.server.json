{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "rootDir": "server",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"]
    }
  },
  "include": ["server/**/*"],
  "exclude": [
    "client",
    "dist",
    "node_modules",
    "vite.config.ts",
    "vite-plugin-meta-images.ts"
  ]
}
